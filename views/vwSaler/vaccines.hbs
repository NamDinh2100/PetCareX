<div class="py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-1">Quản lý vaccines</h2>
            
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductModal">
            <i class="bi bi-plus-circle me-2"></i>Thêm vaccine
        </button>
    </div>

    <!-- Products Table -->
    <div class="card card-modern">
        <div class="card-header bg-white py-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control bg-light border-start-0"
                            placeholder="Tìm kiếm sản phẩm...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select bg-light">
                        <option selected>Tất cả loại</option>
                        <option>Food</option>
                        <option>Accessory</option>
                        <option>Medicine</option>
                        <option>Toy</option>
                    </select>
                </div>
                
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Vaccine</th>
                        <th>Loại</th>
                        <th>Nhà sản xuất</th>
                        <th>Ngày sản xuất</th>
                        <th>Ngày hết hạn</th>
                        <th>Giá bán (VNĐ)</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each vaccines}}
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div>
                                    <div class="fw-bold text-dark">{{this.vaccine_name}}</div>
                                    <small class="text-muted font-monospace">ID: #{{this.vaccine_id}}</small>
                                </div>
                            </div>
                        </td>
                        <td><span class="badge bg-secondary-subtle text-secondary">{{this.vaccine_type}}</span></td>
                        <td class="fw-bold">{{this.manufacturer}}</td>
                        <td><span class="fw-semibold">{{formatDate this.production_date}}</span></td>
                        <td><span class="fw-semibold">{{formatDate this.expiry_date}}</span></td>
                        <td class="fw-bold text-success">{{formatCurrency this.price}}</td>

                        <td class="text-end pe-4"> 
                            <button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Product Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="addProductModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Thêm vaccine mới
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/saler/add-vaccine" method="POST">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="vaccine_name" class="form-label fw-bold">Tên vaccine<span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="vaccine_name" name="vaccine_name" required>
                        </div>

                        <div class="col-md-6">
                            <label for="vaccine_type" class="form-label fw-bold">Loại vaccine<span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="vaccine_type" name="vaccine_type" required>
                        </div>

                        <div class="col-md-6">
                            <label for="dosage" class="form-label fw-bold">Liều lượng<span
                                    class="text-danger">*</span></label>
                            <select class="form-select" id="dosage" name="dosage" required>
                                <option value="">Chọn loại...</option>
                                <option value="1ml">mililit</option>
                                <option value="1l">lit</option>
                                
                            </select>   
                        </div>
                        <div class="col-md-6">
                            <label for="manufacturer" class="form-label fw-bold">Nhà sản xuất <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="manufacturer" name="manufacturer" required>
                        </div>
                        <div class="col-md-3">
                            <label for="production_date" class="form-label fw-bold">Ngày sản xuất <span
                                    class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="production_date" name="production_date" required>
                        </div>
                        <div class="col-md-3">
                            <label for="expiry_date" class="form-label fw-bold">Ngày hết hạn <span
                                    class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="expiry_date" name="expiry_date" required>
                        </div>
                        <div class="col-md-6">
                            <label for="selling_price" class="form-label fw-bold">Giá bán <span
                                    class="text-danger">*</span></label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="price" name="price"
                                    min="0" required>
                                <span class="input-group-text">đ</span>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-check-circle me-1"></i>Thêm vaccine
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
