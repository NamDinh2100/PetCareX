<div class="container py-5">

    {{!-- 1. HEADER & NÚT QUAY VỀ --}}
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-file-medical-alt me-2"></i>Hồ sơ sức khỏe
            </h2>
            <p class="text-muted mb-0">Lịch sử khám bệnh và thông tin tiêm chủng của thú cưng.</p>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            {{!-- Nút quay về --}}
            <a href="/doctor/home" class="btn btn-outline-secondary rounded-pill hover-shadow">
                <i class="fas fa-arrow-left me-2"></i>Về trang chính
            </a>
            
            {{!-- Nút khám mới (Nếu muốn bác sĩ thao tác nhanh từ đây) --}}
            {{!-- <a href="/doctor/exam" class="btn btn-primary rounded-pill shadow-sm ms-2">
                <i class="fas fa-stethoscope me-1"></i> Khám ngay
            </a> --}}
        </div>
    </div>

    {{!-- 2. PHẦN 1: LỊCH SỬ KHÁM BỆNH --}}
    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
            <h5 class="fw-bold text-dark border-start border-4 border-primary ps-3">
                <i class="fas fa-stethoscope me-2 text-primary"></i>Lịch sử khám bệnh
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th scope="col" class="py-3 ps-4" style="width: 15%">Ngày khám</th>
                            <th scope="col" class="py-3" style="width: 20%">Bác sĩ phụ trách</th>
                            <th scope="col" class="py-3" style="width: 30%">Triệu chứng</th>
                            <th scope="col" class="py-3" style="width: 35%">Chẩn đoán & Kết luận</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if history.length}}
                            {{#each history}}
                            <tr>
                                {{!-- Ngày khám --}}
                                <td class="ps-4 fw-bold text-dark date-format" data-date="{{this.examination_date}}">
                                    {{this.examination_date}}
                                </td>

                                {{!-- Bác sĩ --}}
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-1 me-2 small" style="width: 24px; height: 24px; text-align: center;">
                                            <i class="fas fa-user-md"></i>
                                        </div>
                                        <span>{{this.full_name}}</span>
                                    </div>
                                </td>

                                {{!-- Triệu chứng --}}
                                <td>
                                    <span class="text-muted">{{this.symptoms}}</span>
                                </td>

                                {{!-- Chẩn đoán --}}
                                <td>
                                    {{#if this.diagnosis}}
                                        <span class="fw-bold text-danger">{{this.diagnosis}}</span>
                                    {{else}}
                                        <span class="text-muted small">-- Chưa có kết luận --</span>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="fas fa-notes-medical fa-3x mb-3 opacity-25"></i>
                                    <p>Chưa có lịch sử khám bệnh nào.</p>
                                </td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{!-- 3. PHẦN 2: GÓI TIÊM PHÒNG --}}
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
            <h5 class="fw-bold text-dark border-start border-4 border-success ps-3">
                <i class="fas fa-syringe me-2 text-success"></i>Gói tiêm phòng đã đăng ký
            </h5>
        </div>
        <div class="card-body">
            
            {{#if packages.length}}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th scope="col" class="py-3 ps-4">Tên gói vaccine</th>
                                <th scope="col" class="py-3">Thời gian hiệu lực</th>
                                <th scope="col" class="py-3 text-center">Trạng thái</th>
                                <th scope="col" class="py-3 text-center">Ưu đãi</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each packages}}
                            <tr>
                                {{!-- Tên gói --}}
                                <td class="ps-4 fw-bold text-dark">
                                    {{this.package_name}}
                                </td>

                                {{!-- Thời gian --}}
                                <td>
                                    <small class="text-muted d-block">
                                        <i class="far fa-calendar-alt me-1"></i>
                                        <span class="date-format" data-date="{{this.start_date}}">{{this.start_date}}</span> 
                                        &rarr; 
                                        <span class="date-format" data-date="{{this.end_date}}">{{this.end_date}}</span>
                                    </small>
                                </td>

                                {{!-- Trạng thái (Tô màu bằng JS) --}}
                                <td class="text-center">
                                    <span class="status-badge badge rounded-pill px-3" data-status="{{this.status}}">
                                        {{this.status}}
                                    </span>
                                </td>

                                {{!-- Ưu đãi --}}
                                <td class="text-center">
                                    <span class="badge bg-warning text-dark border border-warning">
                                        -{{this.discount_percentage}}%
                                    </span>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                {{!-- TRẠNG THÁI TRỐNG --}}
                <div class="alert alert-warning d-flex align-items-center m-3" role="alert">
                    <i class="fas fa-exclamation-triangle fa-2x me-3 opacity-50"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Chưa đăng ký gói tiêm phòng</h6>
                        <p class="mb-0 small">Thú cưng này chưa tham gia gói vaccine nào. Hãy tư vấn cho chủ nuôi nếu cần thiết.</p>
                    </div>
                </div>
            {{/if}}

        </div>
    </div>
</div>

{{!-- SCRIPT XỬ LÝ GIAO DIỆN --}}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        
        // 1. Format Ngày tháng (dd/mm/yyyy)
        document.querySelectorAll('.date-format').forEach(el => {
            const rawDate = el.getAttribute('data-date');
            if (rawDate) {
                const dateObj = new Date(rawDate);
                if (!isNaN(dateObj.getTime())) {
                    el.innerText = dateObj.toLocaleDateString('vi-VN');
                }
            }
        });

        // 2. Tô màu trạng thái gói tiêm
        document.querySelectorAll('.status-badge').forEach(el => {
            const status = el.getAttribute('data-status').toLowerCase();
            
            // Mặc định xóa class cũ
            el.className = 'status-badge badge rounded-pill px-3';

            if (status === 'active' || status === 'kích hoạt') {
                el.classList.add('bg-success'); // Xanh lá
                el.innerHTML = '<i class="fas fa-check-circle me-1"></i>' + el.innerHTML;
            } else if (status === 'expired' || status === 'hết hạn') {
                el.classList.add('bg-secondary'); // Xám
            } else if (status === 'pending') {
                el.classList.add('bg-warning', 'text-dark'); // Vàng
            } else {
                el.classList.add('bg-light', 'text-dark', 'border'); // Mặc định
            }
        });
    });
</script>

<style>
    .hover-shadow:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>