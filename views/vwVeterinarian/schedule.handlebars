{{#section 'css'}}
<style>
    :root {
        --primary-blue: #2d6bfd;
        --edit-red: #ff0033;
    }

    /* Custom styles for calendar grid alignment */
    .calendar-grid-custom {
        display: flex;
        flex-wrap: wrap;
        padding: 10px; /* Adjust padding for inner grid */
    }

    .day-col {
        /* Set width for 7 columns, using flex-basis to ensure proper wrapping */
        flex-basis: calc(100% / 7); 
        max-width: calc(100% / 7);
        padding: 5px; /* Spacing between days */
    }

    /* Style for the day cell itself */
    .calendar-day-custom {
        aspect-ratio: 1; /* Make it a square */
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem; /* Equivalent to Bootstrap's rounded-2/3 */
        font-weight: 600;
        background: #f8f9fa; /* Light background for empty days */
        border: 1px solid #dee2e6;
        cursor: pointer;
        transition: all 0.2s;
        height: 100%; /* Fill the padded column */
    }

    .calendar-day-custom.empty {
        background: #e9ecef; /* Lighter background for empty cells outside the month */
        cursor: default;
        border-color: #f8f9fa;
    }

    .calendar-day-custom.has-appointment {
        background: var(--primary-blue);
        color: white;
        border-color: var(--primary-blue);
        font-weight: 700;
        box-shadow: 0 4px 10px rgba(45, 107, 253, 0.3);
    }

    .calendar-day-custom.has-appointment.completed {
        background: #198754; /* Bootstrap success green */
        border-color: #198754;
        box-shadow: 0 4px 10px rgba(25, 135, 84, 0.3);
    }

    .calendar-day-custom.has-appointment:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(45, 107, 253, 0.4);
    }

    .calendar-day-custom.has-appointment.completed:hover {
        box-shadow: 0 6px 15px rgba(25, 135, 84, 0.4);
    }

    .btn-edit-custom {
        background-color: var(--edit-red);
        color: white;
        border: 2px solid #a30020;
        padding: 0.25rem 1rem;
        border-radius: 0.5rem;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
    }

    .btn-edit-custom:hover {
        background-color: #cc0029;
        color: white;
    }
</style>

{{/section}}

<div class="container-fluid schedule-container">
    <div class="card shadow-lg content-card border-2">
        <div class="card-header bg-light p-3 border-bottom d-flex justify-content-between align-items-center">
            <span class="fs-4 fw-bold text-uppercase">Work Schedule</span>
            <div class="d-flex gap-2 align-items-center">
                <button class="btn btn-sm btn-edit-custom" onclick="previousMonth()" title="Previous Month">
                    <i class="fa-solid fa-chevron-left"></i>
                </button>
                <span class="h4 mb-0" id="monthYear"></span>
                <button class="btn btn-sm btn-edit-custom" onclick="nextMonth()" title="Next Month">
                    <i class="fa-solid fa-chevron-right"></i>
                </button>
            </div>
        </div>

        <div class="row m-0 pt-3 pb-2 fw-bold text-center border-bottom bg-white">
            <div class="col day-name">Mon</div>
            <div class="col day-name">Tue</div>
            <div class="col day-name">Wed</div>
            <div class="col day-name">Thu</div>
            <div class="col day-name">Fri</div>
            <div class="col day-name">Sat</div>
            <div class="col day-name">Sun</div>
        </div>

        <div class="row g-0 flex-grow-1 bg-white calendar-grid-custom" id="calendarGrid">
            </div>

        <div class="card-footer bg-light p-3 d-flex justify-content-between align-items-center border-top">
            <div class="d-flex gap-4 align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <div class="legend-color active rounded-3 border border-secondary" style="width: 30px; height: 30px; background-color: var(--primary-blue);"></div>
                    <span class="small fw-semibold">Confirmed</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <div class="legend-color completed rounded-3 border border-secondary" style="width: 30px; height: 30px; background-color: #198754;"></div>
                    <span class="small fw-semibold">Completed</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <div class="legend-color rounded-3 border border-secondary" style="width: 30px; height: 30px; background-color: #f8f9fa;"></div>
                    <span class="small fw-semibold">No appointments</span>
                </div>
            </div>
            <span class="fw-semibold text-secondary" id="totalAppointments">Total: 0 appointments</span>
        </div>
    </div>
</div>

{{#section 'js'}}
<script>
    const appointments = {{{json schedule}}};
    let currentDate = new Date();

    // Convert appointments to a map of dates for quick lookup
    const appointmentDates = new Map();
    appointments.forEach(apt => {
        const date = new Date(apt.date_start);
        const dateKey = date.toISOString().split('T')[0]; // YYYY-MM-DD format
        if (!appointmentDates.has(dateKey)) {
            appointmentDates.set(dateKey, []);
        }
        appointmentDates.get(dateKey).push(apt);
    });

    function renderCalendar() {
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        
        // Update header
        const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                            'July', 'August', 'September', 'October', 'November', 'December'];
        document.getElementById('monthYear').textContent = `${monthNames[month]} ${year}`;

        // Get first day of month and number of days
        const firstDay = new Date(year, month, 1).getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        
        // Adjust for Monday start (0 = Sunday, convert to 1 = Monday)
        const startDay = firstDay === 0 ? 6 : firstDay - 1;

        const grid = document.getElementById('calendarGrid');
        grid.innerHTML = '';

        let totalDaysRendered = 0;
        
        // Add empty cells for days before month starts
        for (let i = 0; i < startDay; i++) {
            const dayCol = document.createElement('div');
            dayCol.className = 'day-col';
            
            const emptyCell = document.createElement('div');
            emptyCell.className = 'calendar-day-custom empty';
            dayCol.appendChild(emptyCell);
            
            grid.appendChild(dayCol);
            totalDaysRendered++;
        }

        // Add day cells
        let appointmentCount = 0;
        for (let day = 1; day <= daysInMonth; day++) {
            const dayCol = document.createElement('div');
            dayCol.className = 'day-col';

            const dayCell = document.createElement('div');
            dayCell.className = 'calendar-day-custom';
            dayCell.textContent = day;

            // Check if this day has appointments
            const dateKey = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
            if (appointmentDates.has(dateKey)) {
                dayCell.classList.add('has-appointment');
                const dayAppointments = appointmentDates.get(dateKey);
                appointmentCount += dayAppointments.length;
                
                // Check if all appointments in this day are completed
                const allCompleted = dayAppointments.every(apt => apt.status === 'completed');
                if (allCompleted) {
                    dayCell.classList.add('completed');
                }
                
                // Add tooltip with appointment info
                dayCell.title = `${dayAppointments.length} appointments`;
                dayCell.onclick = () => showDayDetails(dateKey, dayAppointments);
            }

            dayCol.appendChild(dayCell);
            grid.appendChild(dayCol);
            totalDaysRendered++;
        }

        // Add empty cells for the remaining days of the last week (to complete the row)
        const remainingCells = 7 - (totalDaysRendered % 7);
        if (remainingCells !== 7) {
             for (let i = 0; i < remainingCells; i++) {
                const dayCol = document.createElement('div');
                dayCol.className = 'day-col';
                
                const emptyCell = document.createElement('div');
                emptyCell.className = 'calendar-day-custom empty';
                dayCol.appendChild(emptyCell);
                
                grid.appendChild(dayCol);
            }
        }
        
        // Update total appointments count
        document.getElementById('totalAppointments').textContent = `Total: ${appointmentCount} appointments`;
    }

    function previousMonth() {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    }

    function nextMonth() {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    }

    function showDayDetails(dateKey, dayAppointments) {
        const appointments = dayAppointments.map(apt => {
            const statusText = apt.status === 'scheduled' ? 'Scheduled' : 'Completed';
            return `- ${apt.full_name}: ${statusText}`;
        }).join('\n');
        
        alert(`Appointments for ${dateKey}:\n\n${appointments}`);
    }

    // Initial render
    renderCalendar();
</script>
{{/section}}