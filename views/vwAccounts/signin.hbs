{{#section 'css'}}
<style>
    /* 1. Background đồng bộ với Home nhưng có thêm độ mờ để nổi bật Form */
    .login-wrapper {
        min-height: 100vh;
        width: 100%;
        /* Dùng lại ảnh Corgi nền vàng sáng sủa của trang Home */
        background: url('https://images.unsplash.com/photo-1587300003388-59208cc962cb?q=80&w=2070&auto=format&fit=crop') no-repeat center center;
        background-size: cover;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Lớp phủ mờ (Backdrop blur) giúp text dễ đọc hơn */
    .login-overlay {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(255, 255, 255, 0.4); /* Màu trắng mờ */
        backdrop-filter: blur(8px); /* Hiệu ứng làm mờ ảnh nền */
        z-index: 1;
    }

    /* 2. Login Card Glassmorphism */
    .login-card {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 420px;
        background: rgba(255, 255, 255, 0.85); /* Nền trắng đục hơn một chút */
        border: 1px solid rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        padding: 2.5rem;
        transition: transform 0.3s ease;
    }

    /* Hiệu ứng Logo */
    .brand-logo-container {
        width: 80px; height: 80px;
        background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center; justify-content: center;
        margin: 0 auto 1.5rem;
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
    }

    /* 3. Custom Input Styles */
    .form-floating > .form-control {
        border-radius: 12px;
        border: 2px solid #e9ecef;
        padding-left: 1rem;
    }
    
    .form-floating > .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }
    
    .form-floating > label {
        padding-left: 1rem;
        color: #6c757d;
    }

    /* Nút đăng nhập to, rõ, bo tròn */
    .btn-login {
        border-radius: 50px;
        padding: 12px;
        font-weight: 700;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        background: linear-gradient(90deg, #0d6efd, #0a58ca);
        border: none;
        box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
        transition: all 0.2s;
    }
    
    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(13, 110, 253, 0.4);
    }

    /* Link quay về trang chủ */
    .back-home {
        position: absolute;
        top: 20px; left: 20px;
        z-index: 3;
        font-weight: 600;
        color: #495057;
        text-decoration: none;
        background: rgba(255,255,255,0.8);
        padding: 8px 16px;
        border-radius: 30px;
        transition: all 0.2s;
    }
    .back-home:hover {
        background: white;
        color: #0d6efd;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    @media (max-width: 576px) {
        .login-card {
            margin: 15px;
            padding: 2rem 1.5rem;
        }
    }
</style>
{{/section}}

<div class="login-wrapper">
    <div class="login-overlay"></div>

    <a href="/" class="back-home">
        <i class="fas fa-arrow-left me-2"></i>Trang chủ
    </a>

    <div class="login-card">
        
        <div class="text-center mb-4">
            <div class="brand-logo-container">
                <i class="fas fa-paw fa-2x"></i>
            </div>
            <h3 class="fw-bold text-dark mb-1">Welcome Back!</h3>
            <p class="text-muted small">Truy cập vào tài khoản của bạn</p>
        </div>

        <form method="POST">
            
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="username" placeholder="Username" required autofocus>
                <label for="floatingInput">Tên đăng nhập</label>
            </div>

            <div class="form-floating mb-4">
                <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
                <label for="floatingPassword">Mật khẩu</label>
            </div>

            <div class="d-grid mb-4">
                <button type="submit" class="btn btn-primary btn-login text-white">
                    Đăng nhập
                </button>
            </div>

            <div class="text-center d-flex justify-content-between align-items-center px-2">
                <a href="#" class="text-decoration-none small text-muted hover-link">Quên mật khẩu?</a>
                <a href="/signup" class="text-decoration-none small fw-bold text-primary">Tạo tài khoản mới</a>
            </div>

        </form>
    </div>
</div>

{{#section 'js'}}
<script>
    const errorMessage = "{{error}}"; 
    
    if (errorMessage) {
        Swal.fire({
            icon: 'error',
            title: 'Đăng nhập thất bại',
            text: errorMessage,
            confirmButtonColor: '#0d6efd'
        });
    }
    
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success')) {
        Swal.fire({
            icon: 'success',
            title: 'Đăng ký thành công!',
            text: 'Bạn có thể đăng nhập ngay bây giờ.',
            confirmButtonColor: '#0d6efd'
        });
        // Xóa param trên URL để reload không hiện lại
        window.history.replaceState(null, null, window.location.pathname);
    }
</script>
{{/section}}