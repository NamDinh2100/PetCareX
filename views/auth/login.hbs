<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #f0f2f5;">
    
    <div class="card border-0 shadow-lg" style="width: 100%; max-width: 400px; border-radius: 1rem;">
        <div class="card-body p-5">
            
            <div class="text-center mb-4">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                    <i class="fas fa-clinic-medical fa-2x"></i>
                </div>
                <h3 class="fw-bold text-dark">PetCareX</h3>
                <p class="text-muted small">Hệ thống quản lý phòng khám</p>
            </div>

            {{#if error}}
                <div class="alert alert-danger d-flex align-items-center p-2 small mb-3" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>{{error}}</div>
                </div>
            {{/if}}

            <form method="POST" action="/auth/login">
                
                <div class="mb-3">
                    <label class="form-label fw-bold text-secondary small text-uppercase">Tên đăng nhập</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-user"></i></span>
                        <input type="text" name="username" class="form-control bg-light border-start-0 ps-0" placeholder="Nhập username..." required autofocus>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold text-secondary small text-uppercase">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-lock"></i></span>
                        <input type="password" name="password" class="form-control bg-light border-start-0 ps-0" placeholder="••••••••" required>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary py-2 fw-bold shadow-sm hover-elevate">
                        Đăng nhập <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>

            </form>
            
            <div class="text-center mt-4">
                <p class="small text-muted mb-0">
                    &copy; 2025 PetCareX System. <br>
                    Liên hệ Admin nếu quên mật khẩu.
                </p>
            </div>
        </div>
    </div>
</div>

{{!-- CSS Inline nhỏ để tạo hiệu ứng hover --}}
<style>
    .hover-elevate {
        transition: transform 0.2s;
    }
    .hover-elevate:hover {
        transform: translateY(-2px);
    }
    /* Tùy chỉnh input focus cho đẹp hơn */
    .form-control:focus {
        box-shadow: none;
        border-color: #ced4da;
    }
    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        border-radius: 0.375rem;
    }
    .input-group:focus-within .form-control, 
    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
    }
</style>