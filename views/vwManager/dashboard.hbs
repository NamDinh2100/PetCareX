<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 fw-bold">CHI NHÁNH: {{branch.branch_name}}</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="bi bi-download fa-sm text-white-50 me-1"></i> Xuất báo cáo
    </a>
</div>

<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card card-modern bg-gradient-primary h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-uppercase mb-1 opacity-75">Tổng doanh thu (Tháng)</div>
                        <div class="h4 mb-0 fw-bold">$45,000</div>
                        <div class="mt-2 small">
                            <span class="fw-bold"><i class="bi bi-arrow-up"></i> 12.5%</span>
                            <span class="opacity-75">so với tháng trước</span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-calendar-check fs-2"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card card-modern bg-gradient-success h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-uppercase mb-1 opacity-75">Người dùng mới</div>
                        <div class="h4 mb-0 fw-bold">1,520</div>
                        <div class="mt-2 small">
                            <span class="fw-bold"><i class="bi bi-arrow-up"></i> 5.8%</span>
                            <span class="opacity-75">tuần này</span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-people fs-2"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card card-modern bg-gradient-info h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-uppercase mb-1 opacity-75">Đơn hàng hoàn thành</div>
                        <div class="h4 mb-0 fw-bold">85%</div>
                        <div class="progress mt-2" style="height: 5px; background-color: rgba(255,255,255,0.3);">
                            <div class="progress-bar bg-white" role="progressbar" style="width: 85%"></div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-clipboard-check fs-2"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card card-modern bg-gradient-warning h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-uppercase mb-1 opacity-75">Yêu cầu hỗ trợ</div>
                        <div class="h4 mb-0 fw-bold">18</div>
                        <div class="mt-2 small">
                            <span class="fw-bold text-danger"><i class="bi bi-arrow-down"></i> 2</span>
                            <span class="opacity-75">đang chờ xử lý</span>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon-wrapper">
                            <i class="bi bi-headset fs-2"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">


    <div class="col-xl-4 col-lg-5">
        <div class="card card-modern shadow mb-4 h-100">
            <div
                class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-bottom-0">
                <h6 class="m-0 font-weight-bold text-primary">Nguồn doanh thu</h6>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <div class="chart-pie pt-4 pb-2" style="height: 250px; width: 100%;">
                    <canvas id="myPieChart"></canvas>
                </div>
            </div>
            <div class="card-footer bg-white small text-muted text-center">
                Dữ liệu cập nhật 5 phút trước
            </div>
        </div>
    </div>
</div>

