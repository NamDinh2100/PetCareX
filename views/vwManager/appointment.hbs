<div class="d-sm-flex align-items-center justify-content-between mb-4 pt-3">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Lịch hẹn</li>
            </ol>
        </nav>
        <h1 class="h3 mb-0 text-gray-800 fw-bold">Quản lý lịch hẹn</h1>
    </div>
    <div>
        <button class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#addAppointmentModal">
            <i class="bi bi-calendar-plus-fill me-2"></i>Tạo lịch hẹn mới
        </button>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-primary border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Tổng lịch hẹn</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{total}}</div>
                    </div>
                    <i class="bi bi-calendar-check-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-success border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Đã hoàn thành</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{completed}}</div>
                    </div>
                    <i class="bi bi-check-circle-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-warning border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Đang chờ khám</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{scheduled}}</div>
                    </div>
                    <i class="bi bi-clock-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card card-modern shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0"
                        placeholder="Tìm tên khách hàng, thú cưng...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Trạng thái: Tất cả</option>
                    <option>Scheduled</option>
                    <option>Completed</option>
                    <option>Cancelled</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control" placeholder="Chọn ngày">
            </div>
        </div>
    </div>
</div>

<div class="card card-modern shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-modern align-middle table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Khách hàng</th>
                        <th>Thú cưng</th>
                        <th>Ngày & Giờ</th>
                        <th>Chi nhánh</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each appointments}}
                    <tr>
                        <td class="ps-4">
                            <span class="fw-bold text-primary">#{{this.appointment_id}}</span>
                        </td>
                        <td>
                            <div>
                                <div class="fw-bold">{{this.customer_name}}</div>
                                <small class="text-muted"><i class="bi bi-telephone me-1"></i>{{this.phone_number}}</small>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-2">
                                    {{#if (eq this.species "Chó")}}
                                        <i class="bi bi-circle-fill text-primary" style="font-size: 8px;"></i>
                                    {{else}}
                                        <i class="bi bi-circle-fill text-warning" style="font-size: 8px;"></i>
                                    {{/if}}
                                </div>
                                <div>
                                    <div class="fw-bold">{{this.pet_name}}</div>
                                    <small class="text-muted">{{this.species}}</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="small">
                                <div><i class="bi bi-calendar3 me-2"></i>{{formatDate this.appointment_date}}</div>
                                <div class="text-muted"><i class="bi bi-clock me-2"></i>{{this.appointment_time}}</div>
                            </div>
                        </td>
                        <td>
                            <small class="text-muted">{{this.branch_name}}</small>
                        </td>
                        <td>
                            {{#if (eq this.status "Scheduled")}}
                                <span class="badge bg-warning text-dark">Đang chờ</span>
                            {{else if (eq this.status "Completed")}}
                                <span class="badge bg-success">Hoàn thành</span>
                            {{else if (eq this.status "Cancelled")}}
                                <span class="badge bg-danger">Đã hủy</span>
                            {{else}}
                                <span class="badge bg-secondary">{{this.status}}</span>
                            {{/if}}
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-light border shadow-sm mx-1" title="Chi tiết"><i
                                    class="bi bi-eye text-primary"></i></button>
                            <button class="btn btn-sm btn-light border shadow-sm mx-1" title="Chỉnh sửa"><i
                                    class="bi bi-pencil text-warning"></i></button>
                            <button class="btn btn-sm btn-light border shadow-sm mx-1" title="Hủy lịch"><i
                                    class="bi bi-x-circle text-danger"></i></button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-white border-top-0 py-3">
        <nav class="d-flex justify-content-between align-items-center">
            <p class="text-muted small mb-0">Hiển thị trang {{currentPage}} / {{totalPages}}</p>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item {{#unless hasPrev}}disabled{{/unless}}">
                    {{#if hasPrev}}
                        <a class="page-link" href="?page={{prevPage}}">Trước</a>
                    {{else}}
                        <span class="page-link">Trước</span>
                    {{/if}}
                </li>
                
                <li class="page-item active">
                    <span class="page-link">{{currentPage}}</span>
                </li>
                
                {{#if hasNext}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{nextPage}}">{{nextPage}}</a>
                    </li>
                {{/if}}
                
                <li class="page-item {{#unless hasNext}}disabled{{/unless}}">
                    {{#if hasNext}}
                        <a class="page-link" href="?page={{nextPage}}">Sau</a>
                    {{else}}
                        <span class="page-link">Sau</span>
                    {{/if}}
                </li>
            </ul>
        </nav>
    </div>
</div>


<div class="modal fade" id="addAppointmentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold">Tạo lịch hẹn mới</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Khách hàng</label>
                            <select class="form-select">
                                <option value="">Chọn khách hàng</option>
                                <option>Nguyễn Văn A - 0901234567</option>
                                <option>Trần Thị B - 0902345678</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Thú cưng</label>
                            <select class="form-select">
                                <option value="">Chọn thú cưng</option>
                                <option>Milo - Chó</option>
                                <option>Luna - Mèo</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Ngày hẹn</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Giờ hẹn</label>
                            <select class="form-select">
                                <option value="">Chọn giờ</option>
                                <option>09:00</option>
                                <option>09:30</option>
                                <option>10:00</option>
                                <option>10:30</option>
                                <option>11:00</option>
                                <option>13:00</option>
                                <option>13:30</option>
                                <option>14:00</option>
                                <option>14:30</option>
                                <option>15:00</option>
                                <option>15:30</option>
                                <option>16:00</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Chi nhánh</label>
                            <select class="form-select">
                                <option value="">Chọn chi nhánh</option>
                                <option>Chi nhánh Quận 1</option>
                                <option>Chi nhánh Quận 2</option>
                                <option>Chi nhánh Quận 3</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small">Dịch vụ</label>
                            <select class="form-select">
                                <option value="">Chọn dịch vụ</option>
                                <option>Khám tổng quát</option>
                                <option>Tiêm phòng</option>
                                <option>Tắm rửa</option>
                                <option>Cắt tỉa lông</option>
                            </select>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-bold small">Ghi chú</label>
                            <textarea class="form-control" rows="3" placeholder="Nhập ghi chú (nếu có)..."></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary px-4">Tạo lịch hẹn</button>
            </div>
        </div>
    </div>
</div>