{{#section 'css'}}
<style>
    .pop-up {
        margin-top: 40px;
        margin-bottom: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }

    .modal-content {
        border: 2px solid #a58f8f; /* Viền modal */
        border-radius: 15px;
        overflow: hidden; /* Để bo góc header không bị che */
    }

    .modal-header {
        background-color: #d9d9d9; /* Màu nền xám header */
        border-bottom: 2px solid #a58f8f;
        padding-top: 15px;
        padding-bottom: 15px;
    }

    /* Style cho Label (ID, FULL NAME...) */
    .form-label {
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.85rem;
        margin-left: 10px; /* Thụt vào một chút cho thẳng hàng với độ cong của input */
        margin-bottom: 5px;
    }
</style>
{{/section}}

<div class="pop-up">
    <div class="modal-dialog modal-dialog-centered modal-lg bg-white" style="max-width: 800px;">
        <div class="modal-content shadow-lg">

            <div class="modal-header justify-content-center position-relative">
                <h4 class="modal-title brand-font fw-bold text-uppercase" style="letter-spacing: 1px;">Medicine</h4>
                <a href="/admin/medicines"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill" style="color: #a94442;"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST">
                    
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="form-label">ID</label>
                            <input type="text" name="id" class="form-control form-control-lg rounded-pill border-2 fs-6"
                                value="#{{medicine.medicine_id}}" readonly style="border-color: #000;">
                        </div>
                        <div class="col-md-9">
                            <label class="form-label">Medicine name</label>
                            <input type="text" name="medicine_name" class="form-control form-control-lg rounded-pill border-2 fs-6"
                                value="{{medicine.medicine_name}}" style="border-color: #000;">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Form</label>
                            <select name="form" class="form-select form-select-lg rounded-pill border-2 fs-6" 
                                style="border-color: #000;">
                                <option selected>{{medicine.form}}</option>
                                <option value="Tablet">Tablet</option>
                                <option value="Capsule">Capsule</option>
                                <option value="Liquid">Liquid</option>
                                <option value="Injection">Injection</option>
                                <option value="Cream">Cream</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Category</label>
                            <select name="category" class="form-select form-select-lg rounded-pill border-2 fs-6" 
                                style="border-color: #000;">
                                <option selected>{{medicine.category}}</option>
                                <option value="Antibiotic">Antibiotic</option>
                                <option value="Pain Relief">Pain Relief</option>
                                <option value="Vitamin">Vitamin</option>
                                <option value="Vaccine">Vaccine</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-5">
                        <label class="form-label">Desciption</label>
                        <input type="text" name="description" class="form-control form-control-lg rounded-pill border-2 fs-6"
                            value="{{medicine.description}}" style="border-color: #000;">
                    </div>

                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" 
                            class="btn btn-outline-primary rounded-pill px-4 py-2 fw-bold fs-5 border-2">
                            Update
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.querySelector('form').addEventListener('submit', function(e) {
        e.preventDefault();
        Swal.fire({
            title: 'Success!',
            text: 'Medicine updated successfully.',
            icon: 'success',
            confirmButtonText: 'OK'
        }).then(() => {
            e.target.submit();
        });
    });
</script>
{{/section}}