{{#section 'css'}}
    <style>
        /* --- 1. CSS HIỆU ỨNG LÀM MỜ & NHẠT (QUAN TRỌNG) --- */
        .content-blur {
            filter: blur(4px);        /* Làm nhòe đi 4px */
            opacity: 0.4;             /* Làm nhạt đi (chỉ còn 40% độ rõ) */
            pointer-events: none;     /* Vô hiệu hóa chuột (không bấm được) */
            user-select: none;        /* Không cho bôi đen chữ */
            transition: all 0.3s ease; /* Hiệu ứng chuyển đổi mượt mà */
        }

        /* --- 2. CSS MODAL & GIAO DIỆN --- */
        .modal-content {
            border: 3px solid #a58f8f;
            border-radius: 25px;
        }
        .modal-header {
            background-color: #d9d9d9;
            border-bottom: 3px solid #a58f8f;
            border-radius: 22px 22px 0 0;
        }

        /* Làm tối nền xung quanh modal một chút */
        .modal-backdrop.show {
            backdrop-filter: blur(2px);
            opacity: 0.2; 
        }
        
        /* Tùy chỉnh phân trang */
        .table-container {
            min-height: 450px;
        }
        .pagination .page-link {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            padding: 0;
            border: 2px solid #2d5bff;
            color: #2d5bff;
            font-weight: bold;
        }
        .pagination .page-item.active .page-link {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
        .pagination .page-link:hover {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
    </style>
{{/section}}

<div class="row mb-4">
    <div class="col-md-8 mx-auto">
        <div class="input-group">
            <input type="text" class="form-control border-dark search-input-rounded ps-4 bg-white"
                placeholder="SEARCH DATA..." aria-label="Search">
            <span class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary">
                <i class="bi bi-search"></i>
            </span>
        </div>
    </div>
</div>

{{!-- 1. DANH SÁCH THUỐC (NỀN) --}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 brand-font fw-bold text-uppercase">Medicine</h4>
            
            <a class="btn btn-outline-success" href="/admin/medicines/add">
                <i class="bi bi-plus-lg me-1"></i> New
            </a>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th> 
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Form</th>
                        <th scope="col" class="py-3">Category</th>
                        <th scope="col" class="py-3">Description</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each medicines}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{medicine_id}}</td>
                        <td class="fw-semibold">{{medicine_name}}</td>
                        <td><span class="badge text-dark">{{form}}</span></td>
                        <td><span class="badge text-dark">{{category}}</span></td>
                        <td class="text-muted small">{{description}}</td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-outline-primary" href="/admin/medicines/edit?id={{medicine_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="?page={{value}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>

{{!-- 2. MODAL POPUP (FORM NHẬP LIỆU) --}}
{{#if isAddMode}}
<div class="modal fade" id="addMedicineModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            
            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase">New Medicine</h4>
                <a href="/admin/medicines" class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST" id="frmMedicine">
                    <div class="mb-4">
                        <input type="text" name="medicine_name" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="MEDICINE NAME" required style="border-color: #ccc;">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <select name="form" class="form-select form-select-lg rounded-pill border-2 fs-6 text-muted" style="border-color: #ccc;">
                                <option selected disabled>FORM</option>
                                <option value="Tablet">Tablet</option>
                                <option value="Capsule">Capsule</option>
                                <option value="Liquid">Liquid</option>
                                <option value="Injection">Injection</option>
                                <option value="Cream">Cream</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-4">
                            <select name="category" class="form-select form-select-lg rounded-pill border-2 fs-6 text-muted" style="border-color: #ccc;">
                                <option selected disabled>CATEGORY</option>
                                <option value="Antibiotic">Antibiotic</option>
                                <option value="Pain Relief">Pain Relief</option>
                                <option value="Vitamin">Vitamin</option>
                                <option value="Vaccine">Vaccine</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-4">
                        <textarea name="description" class="form-control border-2 fs-6" placeholder="DESCRIPTION (Optional)" rows="3" style="border-color: #ccc; border-radius: 20px; padding: 15px 20px;"></textarea>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.querySelector('#frmMedicine').addEventListener('submit', function (e) {
    e.preventDefault();

    Swal.fire({
        title: 'Success',
        text: 'Added medicine successfully.',
        icon: 'success'
    }).then(() => {
        e.target.submit();
    });
  })

    document.addEventListener('DOMContentLoaded', function () {
        // Tự động bật Modal Medicine
        var addModalElement = document.getElementById('addMedicineModal');
        if (addModalElement) {
            var myModal = new bootstrap.Modal(addModalElement);
            myModal.show();
        }
    });
</script>
{{/section}}