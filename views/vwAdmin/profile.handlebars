{{#section 'css'}}
<style>
    .profile-page-container {
        max-width: 900px;
        margin: 0 auto;
        padding-top: 20px;
        position: relative;
    }

    .profile-form-card {
        border: 2px solid #bdaaaa;
        border-radius: 20px;
        overflow: hidden;
        background: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        position: relative;
    }

    .profile-card-header {
        background-color: #dcdcdc;
        border-bottom: 2px solid #bdaaaa;
        padding: 15px 30px;
    }

    .profile-card-title {
        font-family: 'Abhaya Libre', serif;
        font-weight: 700;
        text-transform: uppercase;
        margin: 0;
        font-size: 1.3rem;
    }

    .profile-label {
        font-family: 'Abhaya Libre', serif;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.8rem;
        margin-left: 15px;
        margin-bottom: 5px;
    }

    .profile-input {
        border-radius: 50px;
        border: 2px solid #000;
        padding: 10px 25px;
        font-weight: 500;
    }

    .profile-input:focus {
        box-shadow: none;
        border-color: #2d5bff;
    }

    .profile-input[readonly],
    .profile-input:disabled {
        background-color: #f8f9fa;
        color: #6c757d;
        border-color: #000;
    }

    .close-btn-custom {
        position: absolute;
        right: 15px;
        top: 5px;
        text-decoration: none;
        font-size: 1.8rem;
        color: #d9534f;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .close-btn-custom:hover {
        color: #c9302c;
        transform: scale(1.2);
    }

    /* Khung modal chính */
    .custom-password-modal {
        border: 2px solid #a58f8f;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    /* Header màu xám */
    .custom-modal-header {
        background-color: #d9d9d9;
        border-bottom: 2px solid #a58f8f;
    }

    .custom-modal-header h4 {
        font-family: 'Times New Roman', Times, serif;
        letter-spacing: 1px;
    }

    /* Nút đóng X màu đỏ */
    .btn-close-custom {
        background: none;
        border: none;
        color: #a94442;
        font-size: 1.8rem;
        cursor: pointer;
        padding: 0;
        line-height: 1;
    }

    /* Input hình viên thuốc (Pill shape) */
    .pill-input {
        border-radius: 50px;
        border: 1.5px solid #888;
        padding: 12px 20px;
        font-size: 0.95rem;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

    .pill-input:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
        border-color: #0d6efd;
    }

    /* Nút Submit */
    .pill-button {
        border-radius: 15px;
        border-width: 2px;
        padding: 10px 40px;
        transition: all 0.3s;
    }

    .pill-button:hover {
        background-color: #0d6efd;
        color: white;
        transform: translateY(-2px);
    }
</style>
{{/section}}


<div class="profile-page-container">
    <div class="profile-form-card mb-2">
        <a href="javascript:history.back()" class="close-btn-custom">
            <i class="bi bi-x-circle-fill"></i>
        </a>
        <div class="profile-card-header">
            <h5 class="profile-card-title">PROFILE</h5>
        </div>

        <div class="p-4 p-md-5">
            <form method="POST">

                <div class="row mb-3">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label class="profile-label">FULL NAME</label>
                        <input type="text" name="full_name" class="form-control profile-input"
                            value="{{authUser.full_name}}">
                    </div>
                    <div class="col-md-6">
                        <label class="profile-label">ROLE</label>
                        <input type="text" class="form-control profile-input" value="{{authUser.role}}" readonly>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label class="profile-label">EMAIL</label>
                        <input type="email" class="form-control profile-input" value="{{authUser.email}}" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="profile-label">PHONE</label>
                        <input type="tel" name="phone" class="form-control profile-input" value="{{authUser.phone}}">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="profile-label">ADDRESS</label>
                    <input type="text" name="address" class="form-control profile-input" value="{{authUser.address}}">
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary shadow-sm">
                        Update
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.querySelector('form').addEventListener('submit', function(e) {
        e.preventDefault();
        Swal.fire({
            title: 'Success!',
            text: 'Profile updated successfully.',
            icon: 'success',
            confirmButtonText: 'OK'
        }).then(() => {
            e.target.submit();
        });
    });
</script>
{{/section}}