{{#section 'css'}}
    <style>
        /* --- GIỮ LẠI STYLE RIÊNG CHO MODAL --- */
        .modal-content {
            border: 3px solid #a58f8f;
            border-radius: 25px;
        }
        .modal-header {
            background-color: #d9d9d9;
            border-bottom: 3px solid #a58f8f;
            border-radius: 22px 22px 0 0;
        }
        
        /* Tùy chỉnh màu pagination */
        .table-container {
            min-height: 450px;
        }
        .pagination .page-link {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            padding: 0;
            border: 2px solid #2d5bff;
            color: #2d5bff;
            font-weight: bold;
        }
        .pagination .page-item.active .page-link {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
        .pagination .page-link:hover {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }

        .role-badge {
            min-width: 100px; /* Độ rộng cố định để thẳng hàng */
            padding: 8px 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        /* 1. ADMIN - Màu đỏ (Quyền lực/Cao nhất) */
        .role-admin {
            background-color: #ffe5e5; /* Nền đỏ nhạt */
            color: #d63384;           /* Chữ đỏ đậm */
            border: 1px solid #d63384;
        }

        /* 2. VETERINARIAN - Màu xanh lá (Y tế/Bác sĩ) */
        .role-veterinarian {
            background-color: #e8f5e9; /* Nền xanh lá nhạt */
            color: #198754;           /* Chữ xanh lá đậm */
            border: 1px solid #198754;
        }

        /* 3. STAFF - Màu xanh dương hoặc Xám (Nhân viên) */
        .role-staff {
            background-color: #e7f1ff; /* Nền xanh dương nhạt */
            color: #0d6efd;           /* Chữ xanh dương đậm */
            border: 1px solid #0d6efd;
        }
    </style>
{{/section}}

<div class="row mb-4">
    <div class="col-md-8 mx-auto">
        <div class="input-group">
            <input type="text" class="form-control border-dark search-input-rounded ps-4 bg-white"
                placeholder="SEARCH DATA..." aria-label="Search">
            <span class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary">
                <i class="bi bi-search"></i>
            </span>
        </div>
    </div>
</div>

{{!-- 1. DANH SÁCH NHÂN VIÊN (UNIFIED CONTAINER) --}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 brand-font fw-bold text-uppercase">EMPLOYEE</h4>
            
            <a class="btn btn-outline-success" href="/admin/employees/add">
                <i class="bi bi-plus-lg me-1"></i> New
            </a>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Email</th>
                        <th scope="col" class="py-3">Phone</th>
                        <th scope="col" class="py-3">Role</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{user_id}}</td>
                        <td class="fw-semibold">{{full_name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td>
                            <span class="badge rounded-pill text-uppercase role-badge role-{{role}}">
                                {{role}}
                            </span>
                        </td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-outline-primary"
                                href="/admin/employees/edit?id={{user_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="?page={{value}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>