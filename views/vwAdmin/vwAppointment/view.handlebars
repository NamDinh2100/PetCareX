{{#section 'css'}}
<style>
    .pop-up {
        margin-top: 40px;
        margin-bottom: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }

    .modal-content {
        border: 2px solid #a58f8f;
        /* Viền modal nâu nhạt */
        border-radius: 15px;
        overflow: hidden;
    }

    .modal-header {
        background-color: #d9d9d9;
        /* Màu nền xám */
        border-bottom: 2px solid #a58f8f;
        padding-top: 15px;
        padding-bottom: 15px;
    }

    /* Label Style */
    .form-label {
        font-family: 'Abhaya Libre', serif;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.85rem;
        margin-left: 10px;
        margin-bottom: 5px;
    }
</style>
{{/section}}

<div class="pop-up">
    <div class="modal-dialog modal-dialog-centered modal-lg bg-white" style="max-width: 700px;">
        <div class="modal-content shadow-lg">

            <div class="modal-header justify-content-center position-relative">
                <h4 class="modal-title brand-font fw-bold text-uppercase" style="letter-spacing: 1px;">
                    APPOINTMENT - VIEW
                </h4>
                <a href="/admin/appointments"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill fs-3" style="color: #a94442;"></i>
                </a>
            </div>

            <div class="modal-body p-4">


                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Customer</label>
                        <input type="text" name="customer_name"
                            class="form-control form-control-lg rounded-pill border-2 fs-6"
                            value="{{appointment.customer_name}}" readonly style="border-color: #000;">
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Time</label>
                        <input type="time" name="time" class="form-control form-control-lg rounded-pill border-2 fs-6"
                            value="{{appointment.time}}" readonly style="border-color: #000;">
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Date Start</label>
                        <input type="text" name="date" class="form-control form-control-lg rounded-pill border-2 fs-6"
                            value="{{formatDate appointment.date_start}}" readonly style="border-color: #000;">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Service</label>
                        <input type="text" name="service_name"
                            class="form-control form-control-lg rounded-pill border-2 fs-6"
                            value="{{#each service}}{{this.service_name}}{{#unless @last}}, {{/unless}}{{/each}}"
                            readonly style="border-color: #000;">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Veterinarian</label>
                        <input type="text" name="veterinarian" class="form-control form-control-lg rounded-pill border-2 fs-6"
                            value="{{appointment.veterinarian_name}}" readonly style="border-color: #000;">
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Note</label>
                    <textarea name="note" class="form-control border-2 fs-6 rounded-4" rows="3" readonly
                        style="border-color: #000;">{{appointment.note}}</textarea>
                </div>

            </div>
        </div>
    </div>
</div>