{{#section 'css'}}
    <style>
        .modal-content {
            border: 3px solid #a58f8f;
            border-radius: 25px;
        }
        .modal-header {
            background-color: #d9d9d9;
            border-bottom: 3px solid #a58f8f;
            border-radius: 22px 22px 0 0;
        }

        .modal-backdrop.show {
            backdrop-filter: blur(5px);
            opacity: 0.5;
        }
        
        /* Tùy chỉnh màu pagination */
        .table-container {
            min-height: 450px;
        }
        .pagination .page-link {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            padding: 0;
            border: 2px solid #2d5bff;
            color: #2d5bff;
            font-weight: bold;
        }
        .pagination .page-item.active .page-link {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
        .pagination .page-link:hover {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
    </style>
{{/section}}

<div class="row mb-4">
    <div class="col-md-8 mx-auto">
        <div class="input-group">
            <input type="text" class="form-control border-dark search-input-rounded ps-4 bg-white"
                placeholder="SEARCH DATA..." aria-label="Search">
            <span class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary">
                <i class="bi bi-search"></i>
            </span>
        </div>
    </div>
</div>  

{{!-- 1. DANH SÁCH DỊCH VỤ (UNIFIED CONTAINER) --}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 brand-font fw-bold text-uppercase">Service</h4>
            
            <a class="btn btn-outline-success" href="/admin/services/add">
                <i class="bi bi-plus-lg me-1"></i> New
            </a>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th> <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Base Price</th>
                        <th scope="col" class="py-3">Description</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th> </tr>
                </thead>
                <tbody>
                    {{#each services}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{service_id}}</td>
                        <td class="fw-semibold">{{service_name}}</td>
                        <td class="text-success fw-bold">{{base_price}}</td>
                        <td class="text-muted small">{{description}}</td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-outline-primary" href="/admin/services/edit?id={{service_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="?page={{value}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>

{{!-- 2. MODAL POPUP (FORM NHẬP LIỆU) --}}
{{#if isAddMode}}
<div class="modal fade" id="addServiceModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            
            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase">New Service</h4>
                <a href="/admin/services" class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST" id="frmService">
                    <div class="mb-4">
                        <input type="text" name="service_name" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="SERVICE NAME" required style="border-color: #ccc;">
                    </div>

                    <div class="mb-4">
                        <input type="number" step="0.01" name="base_price" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="BASE PRICE ($)" required style="border-color: #ccc;">
                    </div>

                    <div class="mb-4">
                        <textarea name="description" class="form-control border-2 fs-6" placeholder="DESCRIPTION (Optional)" rows="3" style="border-color: #ccc; border-radius: 20px; padding: 15px 20px;"></textarea>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.querySelector('#frmService').addEventListener('submit', function (e) {
    e.preventDefault();

    Swal.fire({
        title: 'Success',
        text: 'Added service successfully.',
        icon: 'success'
    }).then(() => {
        e.target.submit();
    });
  })

    document.addEventListener('DOMContentLoaded', function () {
        // Tự động bật Modal Service
        var addModalElement = document.getElementById('addServiceModal');
        if (addModalElement) {
            var myModal = new bootstrap.Modal(addModalElement);
            myModal.show();
        }
    });
</script>
{{/section}}