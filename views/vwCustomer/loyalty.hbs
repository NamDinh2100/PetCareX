<div class="container py-5">

    {{!-- HEADER --}}
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-crown me-2 text-warning"></i>Khách hàng thân thiết
            </h2>
            <p class="text-muted mb-0">Hạng thành viên: <b>{{info.membership_level}}</b></p>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <a href="/customer" class="btn btn-outline-secondary rounded-pill hover-shadow">
                <i class="fas fa-arrow-left me-2"></i>Về trang chủ
            </a>
        </div>
    </div>

    <div class="row g-4">
        
        {{!-- CỘT TRÁI: THẺ THÀNH VIÊN --}}
        <div class="col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden text-white mb-4 position-relative" id="memberCard">
                <div class="position-absolute top-0 end-0 p-3 opacity-25">
                    <i class="fas fa-paw fa-10x"></i>
                </div>
                
                <div class="card-body p-4 position-relative z-1 d-flex flex-column justify-content-between" style="min-height: 220px;">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="fw-bold text-uppercase opacity-75 mb-0">PetCareX Member</h5>
                            {{!-- Hiển thị đúng giá trị trong DB: Basic / Friendly / VIP --}}
                            <h2 class="fw-bold mt-1 text-uppercase mb-0" id="levelName">{{info.membership_level}}</h2>
                        </div>
                        <i class="fas fa-gem fa-3x text-white-50"></i>
                    </div>

                    <div class="mt-4">
                        <div class="d-flex justify-content-between align-items-end">
                            <div>
                                <small class="text-uppercase opacity-75 d-block mb-1">Chủ thẻ</small>
                                <h5 class="fw-bold mb-0 text-truncate" style="max-width: 220px;">{{authUser.full_name}}</h5>
                            </div>
                            <div class="text-end">
                                <small class="text-uppercase opacity-75 d-block mb-1">Điểm tích lũy</small>
                                <h3 class="fw-bold mb-0">{{info.loyalty_points}}</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="text-muted">Tổng chi tiêu năm nay:</span>
                        <span class="fw-bold text-primary fs-5 price-format" data-price="{{info.total_spending_year}}">{{info.total_spending_year}}</span>
                    </div>
                    <hr class="my-2">
                    <p class="small text-muted mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        Điểm thưởng được tính dựa trên hóa đơn đã thanh toán thành công.
                    </p>
                </div>
            </div>
        </div>

        {{!-- CỘT PHẢI: QUYỀN LỢI THEO HẠNG --}}
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-4">
                    <h5 class="fw-bold text-dark border-start border-4 ps-3" id="benefitTitle">
                        Quyền lợi hạng {{info.membership_level}}
                    </h5>
                </div>
                <div class="card-body pt-2">
                    <ul class="list-group list-group-flush" id="benefitList">
                        </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- CSS MÀU SẮC THEO DATABASE --}}
<style>
    /* 1. Basic: Màu xám xanh tiêu chuẩn */
    .bg-basic {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
    }
    
    /* 2. Friendly: Màu xanh ngọc / Bạc pha xanh (Thân thiện) */
    .bg-friendly {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    /* 3. VIP: Màu Vàng Gold sang trọng */
    .bg-vip {
        background: linear-gradient(135deg, #F2994A 0%, #F2C94C 100%);
        color: #fff;
        text-shadow: 0 1px 2px rgba(0,0,0,0.1);
    }
</style>

{{!-- SCRIPT XỬ LÝ LOGIC HIỂN THỊ --}}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        // 1. Format tiền
        document.querySelectorAll('.price-format').forEach(el => {
            const price = parseFloat(el.getAttribute('data-price'));
            if (!isNaN(price)) el.innerText = price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
        });

        // 2. Xử lý giao diện theo Hạng (Basic / Friendly / VIP)
        const level = document.getElementById('levelName').innerText.trim(); // Lấy đúng text từ DB (Case sensitive nếu cần)
        const card = document.getElementById('memberCard');
        const list = document.getElementById('benefitList');
        const title = document.getElementById('benefitTitle');

        // Reset class
        card.classList.remove('bg-basic', 'bg-friendly', 'bg-vip');

        if (level === 'VIP') {
            // --- Cấu hình cho VIP ---
            card.classList.add('bg-vip');
            title.classList.add('border-warning'); // Viền vàng
            list.innerHTML = `
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-warning me-2"></i>Tích điểm <b>10%</b> mọi hóa đơn.</li>
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-warning me-2"></i>Ưu tiên đặt lịch khám (Slot riêng).</li>
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-warning me-2"></i>Miễn phí khám lâm sàng.</li>
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-warning me-2"></i>Quà tặng sinh nhật thú cưng đặc biệt.</li>
            `;
        } 
        else if (level === 'Friendly') {
            // --- Cấu hình cho Friendly ---
            card.classList.add('bg-friendly');
            title.classList.add('border-success'); // Viền xanh lá
            list.innerHTML = `
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-success me-2"></i>Tích điểm <b>5%</b> mọi hóa đơn.</li>
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-success me-2"></i>Giảm 5% khi mua phụ kiện.</li>
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-success me-2"></i>Miễn phí tư vấn dinh dưỡng cơ bản.</li>
            `;
        } 
        else {
            // --- Cấu hình cho Basic (Mặc định) ---
            card.classList.add('bg-basic');
            title.classList.add('border-primary'); // Viền xanh dương
            list.innerHTML = `
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-primary me-2"></i>Tích điểm <b>2%</b> mọi hóa đơn.</li>
                <li class="list-group-item border-0 px-0"><i class="fas fa-check-circle text-primary me-2"></i>Tham gia các chương trình khuyến mãi chung.</li>
                <li class="list-group-item border-0 px-0"><i class="fas fa-arrow-up text-muted me-2"></i>Tích lũy thêm chi tiêu để lên hạng <b>Friendly</b>!</li>
            `;
        }
    });
</script>