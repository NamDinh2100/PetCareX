{{#section 'css'}}
<style>
    /* (GIỮ NGUYÊN CSS CŨ CỦA BẠN) */
    .profile-header-card { background: white; border-radius: 50px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); border: 1px solid #ddd; position: relative; margin-top: 60px; padding: 10px 0 20px 0; }
    .avatar-circle { width: 100px; height: 100px; background-color: black; border-radius: 50%; color: white; display: flex; align-items: center; justify-content: center; font-size: 50px; position: absolute; top: -40px; left: 60px; border: 5px solid white; z-index: 10; }
    .username-title { font-family: 'Abhaya Libre', serif; font-size: 1.6rem; margin-left: 180px; margin-top: 20px; margin-bottom: 10px; }
    
    .nav-tabs { border-bottom: 2px solid #000; width: 90%; margin: 10px auto 0 auto; }
    /* Chú ý: Vì dùng thẻ <a> nên cần bỏ text-decoration */
    .nav-tabs .nav-link { border: none; color: #333; font-weight: 600; text-transform: uppercase; margin-right: 20px; background: transparent; padding-bottom: 10px; text-decoration: none; cursor: pointer; }
    .nav-tabs .nav-link.active { color: #2b7de9; background: transparent; border-bottom: 4px solid #2b7de9 !important; margin-bottom: -3px; }
    
    .content-card { background-color: #fcfcfc; border: 3px solid #b8b8b8; border-radius: 20px; padding: 0; overflow: hidden; margin-top: 30px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
    .content-header { background-color: #d9d9d9; padding: 15px 20px; border-bottom: 3px solid #b8b8b8; font-family: 'Abhaya Libre', serif; font-weight: bold; font-size: 1.3rem; text-transform: uppercase; }
    .content-body { padding: 30px; }

    /* Các class CSS khác giữ nguyên như cũ... */
    .form-label-page { font-weight: bold; font-size: 0.9rem; text-transform: uppercase; margin-bottom: 8px; display: block; color: #333; }
    .custom-input-page { border: 2px solid #000; border-radius: 25px; padding: 10px 20px; background-color: #fff; width: 100%; margin-bottom: 25px; font-weight: 500; }
    .btn-update { border: 2px solid #2b7de9; color: #2b7de9; background: white; border-radius: 15px; padding: 8px 40px; font-weight: bold; font-size: 1.1rem; transition: all 0.3s; }
    .btn-update:hover { background-color: #2b7de9; color: white; }
    
    .appointment-table-header { background-color: white; padding: 15px 20px; font-family: 'Abhaya Libre', serif; font-size: 1.2rem; color: #222; }
    .appointment-data-area { background-color: #d9d9d9; height: 400px; width: 100%; }
    
    /* Modals CSS giữ nguyên... */
    .modal-content-custom { border: 4px solid #b1a4a4; border-radius: 25px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.2); }
    .modal-header-custom { background-color: #d9d9d9; border-bottom: 3px solid #b1a4a4; padding: 15px; position: relative; justify-content: center; }
    .modal-title-custom { font-family: 'Abhaya Libre', serif; font-weight: 900; font-size: 1.5rem; text-transform: uppercase; color: #222; }
    .btn-close-custom { position: absolute; right: 20px; top: 50%; transform: translateY(-50%); background: transparent url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23a33'%3e%3cpath d='M.293.293a1 1 0 0 1 1.414 0L8 6.586 14.293.293a1 1 0 1 1 1.414 1.414L9.414 8l6.293 6.293a1 1 0 0 1-1.414 1.414L8 9.414l-6.293 6.293a1 1 0 0 1-1.414-1.414L6.586 8 .293 1.707a1 1 0 0 1 0-1.414z'/%3e%3c/svg%3e") center/1em auto no-repeat; border: 3px solid #a33; border-radius: 50%; opacity: 1; padding: 0.5rem; width: 2.5rem; height: 2.5rem; }
</style>
{{/section}}

<div class="container my-4">
