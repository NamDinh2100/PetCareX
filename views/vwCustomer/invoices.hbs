<div class="container py-5">

    {{!-- 1. HEADER & NÚT ĐIỀU HƯỚNG --}}
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-file-invoice-dollar me-2"></i>Lịch sử mua hàng
            </h2>
            <p class="text-muted mb-0">Xem lại chi tiết các sản phẩm bạn đã mua tại PetCareX.</p>
        </div>
        
        <div class="mt-3 mt-md-0">
            <a href="/customer/products" class="btn btn-primary rounded-pill shadow-sm me-2">
                <i class="fas fa-cart-plus me-1"></i> Mua tiếp
            </a>
            <a href="/customer" class="btn btn-outline-secondary rounded-pill">
                <i class="fas fa-home me-1"></i> Trang chủ
            </a>
        </div>
    </div>

    {{!-- 2. BẢNG DỮ LIỆU --}}
    <div class="card shadow-sm border-0 overflow-hidden">
        {{#if invoices.length}}
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th scope="col" class="py-3 ps-4">Mã HĐ</th>
                            <th scope="col" class="py-3">Ngày mua</th>
                            <th scope="col" class="py-3">Sản phẩm</th>
                            <th scope="col" class="py-3 text-center">Số lượng</th>
                            <th scope="col" class="py-3 text-end">Đơn giá</th>
                            <th scope="col" class="py-3 text-end pe-4">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each invoices}}
                        <tr>
                            {{!-- Mã hóa đơn --}}
                            <td class="ps-4">
                                <span class="badge bg-secondary bg-opacity-10 text-secondary border">
                                    #{{this.invoice_id}}
                                </span>
                            </td>

                            {{!-- Ngày mua (Dùng class date-format để JS xử lý) --}}
                            <td class="date-format text-muted small" data-date="{{this.invoice_date}}">
                                {{this.invoice_date}}
                            </td>

                            {{!-- Tên sản phẩm --}}
                            <td class="fw-bold text-dark">
                                {{this.product_name}}
                            </td>

                            {{!-- Số lượng --}}
                            <td class="text-center">
                                <span class="badge bg-light text-dark border rounded-pill px-3">
                                    {{this.quantity}}
                                </span>
                            </td>

                            {{!-- Đơn giá --}}
                            <td class="text-end price-format" data-price="{{this.unit_price}}">
                                {{this.unit_price}}
                            </td>

                            {{!-- Thành tiền --}}
                            <td class="text-end pe-4 fw-bold text-success price-format" data-price="{{this.line_total}}">
                                {{this.line_total}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        
        {{else}}
            {{!-- 3. TRẠNG THÁI KHI CHƯA CÓ ĐƠN HÀNG --}}
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25">
                    <i class="fas fa-shopping-basket fa-4x"></i>
                </div>
                <h5 class="fw-bold text-secondary">Bạn chưa có đơn hàng nào</h5>
                <p class="text-muted">Hãy ghé thăm cửa hàng để mua sắm cho thú cưng nhé!</p>
                <a href="/customer/products" class="btn btn-primary mt-2">Đến cửa hàng ngay</a>
            </div>
        {{/if}}
    </div>
</div>

{{!-- SCRIPT FORMAT NGÀY & TIỀN --}}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        // 1. Format Tiền tệ (VND)
        document.querySelectorAll('.price-text, .price-format').forEach(el => {
            const rawPrice = el.getAttribute('data-price') || el.innerText;
            const price = parseFloat(rawPrice);
            if (!isNaN(price)) {
                el.innerText = price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
            }
        });

        // 2. Format Ngày tháng (dd/mm/yyyy HH:mm)
        document.querySelectorAll('.date-format').forEach(el => {
            const rawDate = el.getAttribute('data-date');
            if (rawDate) {
                const dateObj = new Date(rawDate);
                if (!isNaN(dateObj.getTime())) {
                    // Chuyển sang định dạng Việt Nam
                    el.innerText = dateObj.toLocaleDateString('vi-VN', {
                        day: '2-digit', month: '2-digit', year: 'numeric',
                        hour: '2-digit', minute: '2-digit'
                    });
                }
            }
        });
    });
</script>