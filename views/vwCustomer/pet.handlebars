<div class="content-card">
    <div class="content-header">PET</div>
    
    <div class="appointment-table-header border-bottom">
        <div class="row">
            <div class="col-md-2 ps-4">Name</div>
            <div class="col-md-2">Age</div>
            <div class="col-md-2">Sex</div>
            <div class="col-md-2">Weight</div>
            <div class="col-md-2">Species</div>
            <div class="col-md-2 text-end pe-5">Actions</div>
        </div>
    </div>
    
    <div class="appointment-data-area py-2" style="overflow-y: auto;">
        {{#each pets}}
        <div class="bg-white rounded mx-3 my-2 p-3 shadow-sm border align-items-center">
            <div class="row align-items-center">
                <div class="col-md-2 ps-3 fw-bold">{{this.name}}</div>
                <div class="col-md-2">{{this.age}}</div>
                <div class="col-md-2">{{this.sex}}</div>
                <div class="col-md-2">{{this.weight}}</div>
                <div class="col-md-2">{{this.species}}</div>
                <div class="col-md-2 text-end pe-4">
                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3 fw-bold" data-bs-toggle="modal" data-bs-target="#viewPetModal">
                        <i class="bi bi-eye me-1"></i> Edit
                    </button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    
    <div class="p-3" style="background-color: #d9d9d9; border-top: 3px solid #b8b8b8;">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-square mb-0 ms-2">
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link border-0" href="#"><i class="bi bi-chevron-right"></i></a></li>
            </ul>
        </nav>
    </div>
</div>