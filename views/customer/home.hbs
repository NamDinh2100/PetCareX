<div class="container py-5">
    
    {{!-- 1. BANNER CHÀO MỪNG --}}
    <div class="row mb-5 align-items-center">
        <div class="col-md-8">
            <h2 class="fw-bold text-primary display-6">
                <i class="fas fa-hand-sparkles text-warning me-2"></i>Xin chào, {{authUser.full_name}}!
            </h2>
            <p class="text-muted lead mb-0">Chào mừng bạn quay lại PetCareX. Chúc bạn và bé cưng một ngày tốt lành.</p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <span class="badge bg-light text-dark border p-2 shadow-sm">
                <i class="far fa-calendar-alt me-1"></i> Hôm nay: <span id="currentDate" class="fw-bold"></span>
            </span>
        </div>
    </div>

    {{!-- 2. DANH SÁCH THÚ CƯNG (Hiển thị dạng lưới thẻ) --}}
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="fw-bold text-dark border-start border-4 border-info ps-3">
                <i class="fas fa-paw me-2 text-info"></i>Thú cưng của bạn
            </h4>
            {{!-- Nút thêm thú cưng (Optional - có thể thêm chức năng này sau) --}}
            <button class="btn btn-sm btn-outline-primary rounded-pill">
                <i class="fas fa-plus me-1"></i>Thêm bé mới
            </button>
        </div>

        {{#if pets.length}}
            <div class="row g-4">
                {{#each pets}}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-up">
                        <div class="card-body d-flex align-items-center p-3">
                            {{!-- Icon đại diện cho thú cưng --}}
                            <div class="flex-shrink-0 bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                <i class="fas fa-dog fa-2x"></i>
                            </div>
                            <div class="ms-3 flex-grow-1">
                                <h5 class="fw-bold mb-1 text-dark">{{this.name}}</h5>
                                <p class="text-muted small mb-1"><i class="fas fa-dna me-1"></i>Giống: {{this.species}}</p>
                            </div>
                            <a href="/customer/pet/{{this.pet_id}}/history" class="btn btn-outline-info btn-sm rounded-pill" title="Xem lịch sử khám">
                                <i class="fas fa-file-medical-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        {{else}}
            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <div>Bạn chưa cập nhật thông tin thú cưng nào. Hãy liên hệ quầy lễ tân để cập nhật nhé!</div>
            </div>
        {{/if}}
    </div>

    {{!-- 3. MENU CHỨC NĂNG (Quick Actions) --}}
    <h4 class="fw-bold text-dark border-start border-4 border-primary ps-3 mb-4">
        <i class="fas fa-th-large me-2 text-primary"></i>Tiện ích
    </h4>
    
    <div class="row g-4">
        {{!-- Card: Đặt lịch khám --}}
        <div class="col-6 col-md-3">
            <a href="/customer/appointment" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm hover-card bg-white text-center">
                    <div class="card-body py-4">
                        <div class="icon-box bg-primary bg-opacity-10 text-primary mx-auto rounded-circle mb-3">
                            <i class="far fa-calendar-check fa-2x"></i>
                        </div>
                        <h6 class="fw-bold text-dark">Đặt lịch khám</h6>
                    </div>
                </div>
            </a>
        </div>

        {{!-- Card: Mua sản phẩm --}}
        <div class="col-6 col-md-3">
            <a href="/customer/products" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm hover-card bg-white text-center">
                    <div class="card-body py-4">
                        <div class="icon-box bg-success bg-opacity-10 text-success mx-auto rounded-circle mb-3">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                        <h6 class="fw-bold text-dark">Mua sản phẩm</h6>
                    </div>
                </div>
            </a>
        </div>

        {{!-- Card: Lịch sử mua hàng --}}
        <div class="col-6 col-md-3">
            <a href="/customer/invoices" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm hover-card bg-white text-center">
                    <div class="card-body py-4">
                        <div class="icon-box bg-warning bg-opacity-10 text-warning mx-auto rounded-circle mb-3">
                            <i class="fas fa-receipt fa-2x"></i>
                        </div>
                        <h6 class="fw-bold text-dark">Hóa đơn cũ</h6>
                    </div>
                </div>
            </a>
        </div>

        {{!-- Card: Tra cứu lịch bác sĩ --}}
        <div class="col-6 col-md-3">
            <a href="/customer/doctors" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm hover-card bg-white text-center">
                    <div class="card-body py-4">
                        <div class="icon-box bg-danger bg-opacity-10 text-danger mx-auto rounded-circle mb-3">
                            <i class="fas fa-user-md fa-2x"></i>
                        </div>
                        <h6 class="fw-bold text-dark">Lịch bác sĩ</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

{{!-- SCRIPT & STYLE RIÊNG --}}
<script>
    // Hiển thị ngày hiện tại
    const options = { weekday: 'long', year: 'numeric', month: 'numeric', day: 'numeric' };
    document.getElementById('currentDate').innerText = new Date().toLocaleDateString('vi-VN', options);
</script>

<style>
    /* Style cho Icon Box tròn tròn */
    .icon-box {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    /* Hiệu ứng nhấc thẻ lên khi di chuột vào */
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15)!important;
    }
    .hover-card:hover .icon-box {
        transform: scale(1.1);
    }
    
    /* Hiệu ứng cho thẻ thú cưng */
    .hover-up:hover {
        transform: translateY(-3px);
        border: 1px solid #0dcaf0 !important; /* Màu xanh cyan */
    }
</style>