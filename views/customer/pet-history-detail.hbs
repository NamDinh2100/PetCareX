<div class="container py-5">

    {{!-- 1. HEADER & QUAY VỀ --}}
    <div class="row align-items-center mb-4">
        <div class="col-md-7">
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-history me-2"></i>Lịch sử: {{pet.name}}
            </h2>
            <p class="text-muted mb-0">Tổng hợp hồ sơ sức khỏe và lịch sử giao dịch.</p>
        </div>
        <div class="col-md-5 text-md-end mt-3 mt-md-0">
            <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill hover-shadow">
                <i class="fas fa-arrow-left me-2"></i>Quay lại tìm kiếm
            </a>
        </div>
    </div>

    {{!-- 2. PHẦN 1: KHÁM BỆNH (EXAMINATIONS) --}}
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom-0 pt-4">
            <h5 class="fw-bold text-dark border-start border-4 border-primary ps-3">
                <i class="fas fa-stethoscope me-2 text-primary"></i>Lịch sử Khám bệnh
            </h5>
        </div>
        <div class="card-body">
            {{#if examinations.length}}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th scope="col" class="ps-3" style="width: 20%">Ngày khám</th>
                                <th scope="col">Chẩn đoán / Kết luận</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each examinations}}
                            <tr>
                                <td class="ps-3 fw-bold text-dark date-format" data-date="{{this.examination_date}}">
                                    {{this.examination_date}}
                                </td>
                                <td>
                                    {{#if this.diagnosis}}
                                        <span class="text-dark">{{this.diagnosis}}</span>
                                    {{else}}
                                        <span class="text-muted small">-- Không có ghi chú --</span>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <div class="text-center py-4 text-muted">
                    <i class="fas fa-notes-medical fa-2x mb-2 opacity-50"></i>
                    <p class="mb-0">Chưa có lịch sử khám bệnh.</p>
                </div>
            {{/if}}
        </div>
    </div>

    {{!-- 3. PHẦN 2: TIÊM PHÒNG (VACCINATIONS) --}}
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom-0 pt-4">
            <h5 class="fw-bold text-dark border-start border-4 border-success ps-3">
                <i class="fas fa-syringe me-2 text-success"></i>Lịch sử Tiêm phòng
            </h5>
        </div>
        <div class="card-body">
            {{#if vaccinations.length}}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th scope="col" class="ps-3" style="width: 20%">Ngày tiêm</th>
                                <th scope="col" style="width: 50%">Tên Vaccine</th>
                                <th scope="col" class="text-end pe-3">Liều lượng</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each vaccinations}}
                            <tr>
                                <td class="ps-3 fw-bold text-dark date-format" data-date="{{this.vaccination_date}}">
                                    {{this.vaccination_date}}
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-shield-virus text-success me-2"></i>
                                        {{this.vaccine_name}}
                                    </div>
                                </td>
                                <td class="text-end pe-3">
                                    <span class="badge bg-light text-dark border">{{this.dosage}}</span>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <div class="text-center py-4 text-muted">
                    <i class="fas fa-shield-alt fa-2x mb-2 opacity-50"></i>
                    <p class="mb-0">Chưa có lịch sử tiêm phòng.</p>
                </div>
            {{/if}}
        </div>
    </div>

    {{!-- 4. PHẦN 3: HÓA ĐƠN (INVOICES) --}}
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom-0 pt-4">
            <h5 class="fw-bold text-dark border-start border-4 border-warning ps-3">
                <i class="fas fa-file-invoice-dollar me-2 text-warning"></i>Lịch sử Hóa đơn
            </h5>
        </div>
        <div class="card-body">
            {{#if invoices.length}}
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th scope="col" class="ps-3">Mã HĐ</th>
                                <th scope="col" class="text-end">Tổng tiền</th>
                                <th scope="col" class="text-center pe-3">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each invoices}}
                            <tr>
                                <td class="ps-3">
                                    <span class="font-monospace text-primary">#{{this.invoice_id}}</span>
                                </td>
                                <td class="text-end fw-bold text-dark price-format" data-price="{{this.total_price}}">
                                    {{this.total_price}}
                                </td>
                                <td class="text-center pe-3">
                                    <span class="status-badge badge rounded-pill px-3" data-status="{{this.payment_status}}">
                                        {{this.payment_status}}
                                    </span>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <div class="text-center py-4 text-muted">
                    <i class="fas fa-receipt fa-2x mb-2 opacity-50"></i>
                    <p class="mb-0">Chưa có hóa đơn nào.</p>
                </div>
            {{/if}}
        </div>
    </div>

</div>

{{!-- SCRIPT XỬ LÝ FORMAT --}}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        
        // 1. Format Ngày (dd/mm/yyyy)
        document.querySelectorAll('.date-format').forEach(el => {
            const rawDate = el.getAttribute('data-date');
            if (rawDate) {
                const dateObj = new Date(rawDate);
                if (!isNaN(dateObj.getTime())) {
                    el.innerText = dateObj.toLocaleDateString('vi-VN');
                }
            }
        });

        // 2. Format Tiền tệ (VND)
        document.querySelectorAll('.price-format').forEach(el => {
            const price = parseFloat(el.getAttribute('data-price'));
            if (!isNaN(price)) {
                el.innerText = price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
            }
        });

        // 3. Format Trạng thái thanh toán
        document.querySelectorAll('.status-badge').forEach(el => {
            const status = el.getAttribute('data-status').toLowerCase();
            el.className = 'status-badge badge rounded-pill px-3';

            if (status === 'paid' || status === 'đã thanh toán') {
                el.classList.add('bg-success'); // Xanh
            } else if (status === 'pending' || status === 'chờ xử lý') {
                el.classList.add('bg-warning', 'text-dark'); // Vàng
            } else if (status === 'cancelled' || status === 'đã hủy') {
                el.classList.add('bg-danger'); // Đỏ
            } else {
                el.classList.add('bg-secondary'); // Xám
            }
        });
    });
</script>

<style>
    .hover-shadow:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>