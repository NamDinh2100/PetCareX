<div class="container py-5">

    {{!-- 1. HEADER & NÚT QUAY LẠI --}}
    <div class="row align-items-center mb-4">
        <div class="col-md-7">
            <h2 class="fw-bold text-primary mb-1">
                <i class="fas fa-file-medical-alt me-2"></i>Hồ sơ sức khỏe
            </h2>
            <p class="text-muted mb-0">Theo dõi lịch sử khám bệnh và tiêm chủng của thú cưng.</p>
        </div>
        <div class="col-md-5 text-md-end mt-3 mt-md-0">
            <a href="/home" class="btn btn-outline-secondary rounded-pill hover-shadow">
                <i class="fas fa-arrow-left me-2"></i>Về Trang chính
            </a>
            <a href="/customer/appointment" class="btn btn-primary rounded-pill shadow-sm ms-2">
                <i class="fas fa-calendar-plus me-1"></i> Đặt lịch mới
            </a>
        </div>
    </div>

    {{!-- 2. BẢNG DỮ LIỆU --}}
    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th scope="col" class="py-3 ps-4" style="width: 15%;">Ngày & Bác sĩ</th>
                        <th scope="col" class="py-3" style="width: 35%;">Kết quả khám</th>
                        <th scope="col" class="py-3" style="width: 25%;">Đơn thuốc</th>
                        <th scope="col" class="py-3 pe-4" style="width: 25%;">Tiêm chủng</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if history.length}}
                        {{#each history}}
                        <tr>
                            {{!-- Cột 1: Thông tin chung (Ngày + Bác sĩ) --}}
                            <td class="ps-4">
                                <div class="fw-bold text-dark date-format" data-date="{{this.examination_date}}">
                                    {{this.examination_date}}
                                </div>
                                <div class="small text-muted mt-1">
                                    <i class="fas fa-user-md me-1"></i>BS. {{this.doctor_name}}
                                </div>
                            </td>

                            {{!-- Cột 2: Thông tin khám (Triệu chứng + Chẩn đoán) --}}
                            <td>
                                {{#if this.diagnosis}}
                                    <div class="mb-1">
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25">Chẩn đoán</span>
                                        <span class="fw-bold text-dark ms-1">{{this.diagnosis}}</span>
                                    </div>
                                    {{#if this.symptoms}}
                                        <div class="small text-muted">
                                            <i class="fas fa-notes-medical me-1"></i>Triệu chứng: {{this.symptoms}}
                                        </div>
                                    {{/if}}
                                {{else}}
                                    <span class="text-muted opacity-50 small">-- Không khám bệnh --</span>
                                {{/if}}
                            </td>

                            {{!-- Cột 3: Thuốc --}}
                            <td>
                                {{#if this.medicine_name}}
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-capsules text-success me-2"></i>
                                        <div>
                                            <div class="fw-bold text-dark">{{this.medicine_name}}</div>
                                            <small class="text-muted">Số lượng: <span class="fw-bold">{{this.quantity}}</span></small>
                                        </div>
                                    </div>
                                {{else}}
                                    <span class="text-muted opacity-50 small">-</span>
                                {{/if}}
                            </td>

                            {{!-- Cột 4: Vaccine --}}
                            <td class="pe-4">
                                {{#if this.vaccine_name}}
                                    <div class="bg-info bg-opacity-10 p-2 rounded border border-info border-opacity-25">
                                        <div class="fw-bold text-info"><i class="fas fa-syringe me-1"></i>{{this.vaccine_name}}</div>
                                        {{#if this.vaccination_date}}
                                            <div class="small text-muted mt-1">
                                                Ngày tiêm: <span class="date-format" data-date="{{this.vaccination_date}}">{{this.vaccination_date}}</span>
                                            </div>
                                        {{/if}}
                                    </div>
                                {{else}}
                                    <span class="text-muted opacity-50 small">-</span>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    {{else}}
                        {{!-- Trạng thái trống --}}
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <div class="mb-3 opacity-50">
                                    <i class="fas fa-file-medical fa-3x"></i>
                                </div>
                                <h5>Chưa có lịch sử khám bệnh</h5>
                                <p>Hồ sơ sức khỏe của bé hiện đang trống.</p>
                            </td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{!-- SCRIPT FORMAT NGÀY THÁNG --}}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll('.date-format').forEach(el => {
            const rawDate = el.getAttribute('data-date') || el.innerText;
            if (rawDate) {
                const dateObj = new Date(rawDate);
                if (!isNaN(dateObj.getTime())) {
                    // Format dạng dd/mm/yyyy
                    el.innerText = dateObj.toLocaleDateString('vi-VN', {
                        day: '2-digit', month: '2-digit', year: 'numeric'
                    });
                }
            }
        });
    });
</script>

<style>
    .hover-shadow:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>