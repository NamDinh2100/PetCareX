                                {{#if (eq payment_status 'Cancelled')}}
                                    <span class="text-danger small"><i class="bi bi-x-circle-fill me-1"></i>Đã hủy</span>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-50">
                    <i class="bi bi-clipboard-x fs-1"></i>
                </div>
                <h6 class="fw-bold text-secondary">Chưa có hóa đơn nào</h6>
                <p class="text-muted small">Bạn chưa tiếp nhận hóa đơn nào</p>
            </div>
        {{/if}}
    </div>
</div>

{{#section 'js'}}
<script>
    // Nhận hóa đơn để xử lý
    async function assignInvoice(invoiceId) {
        if (!confirm('Bạn có chắc muốn nhận hóa đơn này để xử lý?')) {
            return;
        }

        try {
            const response = await fetch(`/receptionist/invoices/${invoiceId}/assign`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const result = await response.json();

            if (result.success) {
                alert('Đã nhận hóa đơn thành công!');
                location.reload();
            } else {
                alert('Lỗi: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi nhận hóa đơn');
        }
    }

    // Cập nhật trạng thái thanh toán
    async function updatePayment(invoiceId, status) {
        const statusText = status === 'Paid' ? 'đã thanh toán' : 'hủy';
        if (!confirm(`Xác nhận cập nhật hóa đơn ${statusText}?`)) {
            return;
        }

        try {
            const response = await fetch(`/receptionist/invoices/${invoiceId}/payment`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status })
            });

            const result = await response.json();

            if (result.success) {
                alert('Đã cập nhật trạng thái thanh toán!');
                location.reload();
            } else {
                alert('Lỗi: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi cập nhật trạng thái');
        }
    }
</script>
{{/section}}