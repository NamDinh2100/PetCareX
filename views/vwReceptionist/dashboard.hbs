<div class="d-sm-flex align-items-center justify-content-between mb-4 pt-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800 fw-bold">Tổng quan</h1>
        <p class="text-muted mb-0">Chào mừng trở lại, {{authUser.full_name}}!</p>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-primary border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Lịch hẹn hôm nay</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{todayAppointments}}</div>
                    </div>
                    <i class="bi bi-calendar-event-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-warning border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Đang chờ khám</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{pendingAppointments}}</div>
                    </div>
                    <i class="bi bi-clock-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-success border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Đã hoàn thành</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{completedToday}}</div>
                    </div>
                    <i class="bi bi-check-circle-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-8">
        <div class="card card-modern shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">Lịch hẹn hôm nay</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-modern align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Giờ</th>
                                <th>Khách hàng</th>
                                <th>Thú cưng</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="ps-4 fw-bold">09:00</td>
                                <td>Nguyễn Văn A</td>
                                <td>Milo - Chó</td>
                                <td><span class="badge bg-warning text-dark">Đang chờ</span></td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold">10:30</td>
                                <td>Trần Thị B</td>
                                <td>Luna - Mèo</td>
                                <td><span class="badge bg-success">Hoàn thành</span></td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold">14:00</td>
                                <td>Lê Văn C</td>
                                <td>Max - Chó</td>
                                <td><span class="badge bg-warning text-dark">Đang chờ</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white border-0 text-center py-3">
                <a href="/receptionist/appointments" class="text-primary text-decoration-none fw-semibold">
                    Xem tất cả lịch hẹn <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card card-modern shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">Hành động nhanh</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/receptionist/create-appointment" class="btn btn-primary">
                        <i class="bi bi-calendar-plus me-2"></i>Đặt lịch hẹn mới
                    </a>
                    <a href="/receptionist/search-customer" class="btn btn-outline-primary">
                        <i class="bi bi-search me-2"></i>Tìm khách hàng
                    </a>
                    <a href="/receptionist/appointments" class="btn btn-outline-secondary">
                        <i class="bi bi-list-check me-2"></i>Danh sách lịch hẹn
                    </a>
                </div>
            </div>
        </div>

        <div class="card card-modern shadow-sm mt-3">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">Thông báo</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-2">
                    <small><i class="bi bi-info-circle me-2"></i>3 lịch hẹn mới được tạo hôm nay</small>
                </div>
                <div class="alert alert-warning mb-0">
                    <small><i class="bi bi-exclamation-triangle me-2"></i>2 khách hàng đang chờ</small>
                </div>
            </div>
        </div>
    </div>
</div>
