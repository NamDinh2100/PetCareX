<div class="d-sm-flex align-items-center justify-content-between mb-4 pt-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800 fw-bold">Quản lý lịch hẹn</h1>
    </div>
    <div>
        <a href="/receptionist/create-appointment" class="btn btn-primary shadow-sm">
            <i class="bi bi-calendar-plus-fill me-2"></i>Đặt lịch hẹn mới
        </a>
    </div>
</div>

{{#if success}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="bi bi-check-circle-fill me-2"></i>
    {{#if (eq success "updated")}}
        Cập nhật lịch hẹn thành công!
    {{else}}
        Thao tác thành công!
    {{/if}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    {{#if (eq error "not_found")}}
        Không tìm thấy lịch hẹn.
    {{else}}
        Có lỗi xảy ra. Vui lòng thử lại.
    {{/if}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-primary border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Tổng lịch hẹn</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{total}}</div>
                    </div>
                    <i class="bi bi-calendar-check-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-success border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Đã hoàn thành</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{completed}}</div>
                    </div>
                    <i class="bi bi-check-circle-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-modern border-0 border-start border-warning border-4 shadow-sm py-2">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">Đang chờ khám</div>
                        <div class="h4 mb-0 fw-bold text-dark">{{scheduled}}</div>
                    </div>
                    <i class="bi bi-clock-fill fs-2 text-gray-300 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card card-modern shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0"
                        placeholder="Tìm tên khách hàng, thú cưng...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Trạng thái: Tất cả</option>
                    <option>Scheduled</option>
                    <option>Completed</option>
                    <option>Cancelled</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="date" class="form-control" placeholder="Chọn ngày">
            </div>
        </div>
    </div>
</div>

<div class="card card-modern shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-modern align-middle table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Khách hàng</th>
                        <th>Thú cưng</th>
                        <th>Ngày & Giờ</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each appointments}}
                    <tr>
                        <td class="ps-4">
                            <span class="fw-bold text-primary">#{{this.appointment_id}}</span>
                        </td>
                        <td>
                            <div>
                                <div class="fw-bold">{{this.customer_name}}</div>
                                <small class="text-muted"><i class="bi bi-telephone me-1"></i>{{this.phone_number}}</small>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <div class="fw-bold">{{this.name}}</div>
                                    <small class="text-muted">{{this.species}}</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="small">
                                <div><i class="bi bi-calendar3 me-2"></i>{{formatDate this.appointment_date}}</div>
                                <div class="text-muted"><i class="bi bi-clock me-2"></i>{{this.appointment_time}}</div>
                            </div>
                        </td>
                       
                        <td>
                            {{#if (eq this.status "Scheduled")}}
                                <span class="badge bg-warning text-dark">Đang chờ</span>
                            {{/if}}
                            {{#if (eq this.status "Confirmed")}}
                                <span class="badge bg-success">Đã xác nhận</span>
                            {{/if}}
                            {{#if (eq this.status "Cancelled")}}
                                <span class="badge bg-danger">Đã hủy</span>
                            {{/if}}
                           
                            
                        </td>
                        <td class="text-end pe-4">
                            <a href="/receptionist/appointments/{{this.appointment_id}}/edit" 
                               class="btn btn-sm btn-light border shadow-sm mx-1" 
                               title="Chỉnh sửa">
                                <i class="bi bi-pencil text-primary"></i>
                            </a>
                            <button class="btn btn-sm btn-light border shadow-sm mx-1" title="Chi tiết">
                                <i class="bi bi-eye text-info"></i>
                            </button>
                            <button class="btn btn-sm btn-light border shadow-sm mx-1" title="Hoàn thành">
                                <i class="bi bi-check-circle text-success"></i>
                            </button>
                            <button class="btn btn-sm btn-light border shadow-sm mx-1" title="Hủy lịch">
                                <i class="bi bi-x-circle text-danger"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-white border-top-0 py-3">
        <nav class="d-flex justify-content-between align-items-center">
            <p class="text-muted small mb-0">Hiển thị trang {{currentPage}} / {{totalPages}}</p>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item {{#unless hasPrev}}disabled{{/unless}}">
                    {{#if hasPrev}}
                        <a class="page-link" href="?page={{prevPage}}">Trước</a>
                    {{else}}
                        <span class="page-link">Trước</span>
                    {{/if}}
                </li>
                
                <li class="page-item active">
                    <span class="page-link">{{currentPage}}</span>
                </li>
                
                {{#if hasNext}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{nextPage}}">{{nextPage}}</a>
                    </li>
                {{/if}}
                
                <li class="page-item {{#unless hasNext}}disabled{{/unless}}">
                    {{#if hasNext}}
                        <a class="page-link" href="?page={{nextPage}}">Sau</a>
                    {{else}}
                        <span class="page-link">Sau</span>
                    {{/if}}
                </li>
            </ul>
        </nav>
    </div>
</div>
